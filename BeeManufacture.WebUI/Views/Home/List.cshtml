@model IEnumerable<BeeManufacture.Domain.Entities.BHouse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <title>List</title>
</head>
<body>


    <div id="header">
        <div class="title">Bee Manufacture</div>
    </div>
    <div id="categories">
        We will put something useful here later
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BHType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MB_Kind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MB_Birth)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BHType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MB_Kind)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MB_Birth)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BHouseId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BHouseId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BHouseId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
